# ----- Core Configuration -----
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
PYTHONUNBUFFERED=1
RANDOMIZE_PREDICTIONS=1  # Makes predictions more varied based on input values

# ----- Port Configuration -----
API_PORT=8000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
DASHBOARD_PORT=8501
RCA_PORT=8080

# ----- Hugging Face Configuration -----
HF_TOKEN=your_huggingface_token  # Required for LLM models
HF_CACHE_DIR=/app/hf_cache  # Optional: Set custom cache location

# ----- Alert Configuration -----
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXX/YYYYY/ZZZZZZ
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ----- Grafana Configuration -----
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ----- Feature Store -----
FEAST_S3_ENDPOINT_URL=  # Leave empty for local mode
FEAST_S3_ACCESS_KEY=    # For cloud deployments
FEAST_S3_SECRET_KEY=